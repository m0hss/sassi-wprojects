generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  slug        String
  name        String
  name_en     String?
  description_en String? @db.Text
  description String   @db.Text
  price       Int
  currency    String
  url         String?  // optional preview URL for the product
  brandId     Int
  brand     Brand   @relation(fields: [brandId], references: [id], map: "Product_brandId_fkey_unique")

  @@index([brandId], map: "Product_brandId_fkey")
}

model Brand {
  id       Int       @id @default(autoincrement())
  name     String
  name_en  String?
  products Product[]
}
